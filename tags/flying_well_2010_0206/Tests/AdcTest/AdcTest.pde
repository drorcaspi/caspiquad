#include <stdlib.h>
#include <math.h>

#include "quad.h"
#include "adc.h"



//=============================================================================
//
// Global Definitions
//
//=============================================================================

uint8_t cycles;

//=============================== setup() =====================================
//
// Arduino Initialization
//
//=============================================================================

void setup()
{
  //analogReference(ANALOG_REFERENCE);
  Serial.begin(115200);

  adc_init();
}


//=============================== loop() ======================================
//
// Arduino Main Loop Body
//
//=============================================================================

void loop()
{
  digitalWrite(LED_PIN, cycles++ & 1);
  delay(1000);
  adc_print_stats();
}
